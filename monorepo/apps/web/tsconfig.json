{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@*": ["./*"],
      // repo packages
      "@repo/sdk": ["../../packages/sdk/src/index.ts"],
      "@repo/shared": ["../../packages/shared/src/index.ts"],
      "@repo/database": ["../../packages/database/src/index.ts"]
